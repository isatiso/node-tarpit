{
    "extends": "@tarpit/abraham/assets/common-tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./lib",
        "plugins": [
            {
                "transform": "@tarpit/transformer",
                "import": "comment_decorators",
                "afterDeclarations": true
            }
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ]
}
