{
    "extends": "@tarpit/abraham/assets/common-tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./lib",
        "paths": {
            "@tarpit/content-type": [
                "../content-type/src"
            ],
            "@tarpit/core": [
                "../core/src"
            ],
            "@tarpit/config": [
                "../../packages/config/src"
            ],
            "@tarpit/error": [
                "../../packages/error/src"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ]
}
